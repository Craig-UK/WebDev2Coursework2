<html>

<head>
    {{>header}}
</head>

<body>
    {{>nav}}
    <h1>Edit Dish</h1>
    {{#dishes}}
    <div id="formContent">
        <form method="POST" action="/dish/edit/{{name}}">
            <div class="form-group">
                <label for="name" class="col-sm-2 col-formlabel">
                    Menu Item Name
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="name" name="name" placeholder="{{name}}" value="{{name}}">
                </div>
            </div>
            <div class="form-group">
                <label for="ingredients" class="col-sm-2 col-formlabel">
                    Menu Item Ingredients
                </label>
                <div class="col-sm-10">
                    <input type="ingredients" class="form-control" id="ingredients" name="ingredients"
                        placeholder="{{ingredients}}" value="{{ingredients}}">
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-2 col-formlabel">
                    Menu Item Description
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="description" name="description"
                        placeholder="{{description}}" value="{{description}}">
                </div>
            </div>
            <div class="form-group">
                <label for="dishType" class="col-sm-2 col-formlabel">
                    Dish Type
                </label>
            <select class="form-control col-sm-3" id="dishType" name="dishType">
                    <option selected>{{dishType}}</option>
                    <option>Starter</option>
                    <option>Main Course</option>
                    <option>Dessert</option>
                    <option>Cold Drink</option>
                    <option>Warm Drink</option>
                </select>
            </div>
            <div class="form-group">
                <label for="image" class="col-sm-2 col-formlabel">
                    Image of Menu Item
                </label>
                <input type="file" class="form-control-file" id="image" name="image">
            </div>
            <div class="form-group">
                <label for="menu" class="col-sm-2 col-formlabel">
                    Dinner or Lunch Menu?
                </label>
                <select class="form-control col-sm-3" id="menu" name="menu">
                    <option selected>{{menu}}</option>
                    <option>Dinner</option>
                    <option>Lunch</option>
                </select>
            </div>
            <div class="form-group">
                <label for="allergyInfo" class="col-sm-2 col-formlabel">
                    Menu Item Allergy Information
                </label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="allergyInfo" name="allergyInfo"
                        placeholder="{{allergyInfo}}" value="{{allergyInfo}}">
                </div>
            </div>
            <div class="form-group">
                <label for="price" class="col-sm-2 col-formlabel">
                    Menu Item Price
                </label>
                <div class="col-sm-3">
                    <input type="text" class="form-control" id="price" name="price" placeholder="{{price}}" value="{{price}}">
                </div>
            </div>

            <div class="form-group d-flex justify-content-center">
                <input type="submit" class="btn btn-primary" value="Submit">
            </div>
        </form>
    </div>

    <script>
        var loadFile = function (event) {
            var image = document.getElementById('output');
            image.src = URL.createObjectURL(event.target.files[0]);
        };
    </script>
    {{/dishes}}
</body>

</html>